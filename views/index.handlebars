<h1>Eat-a-Burger!</h1>

<div>
<ul>
{{#each burger}}
	{{#unless this.devoured}}
	<li>
		{{this.name}}

		<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
			<input type="hidden" name="sleepy" value="true">
			<button type="submit">Devour it!</button>
		</form>
	</li>
	{{/unless}}
	{{/each}}
	</ul>
</div>
<div>
<h1>Add a Burger</h1>
	<form action ="burgers/update/{{this.id}}?_method=PUT" method="POST">
		<div class = "form-group">
			<label for="burger">Burger Name:</label>
			<input type="text" id="burger" name="name">
		</div>

		<div class = "form-group">
			<label for="devoured"></label>
			<input type="hidden" name="devoured" value="0" checked> Devoured<br>
		</div>

		<div class = "form-group">
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
					<li>
					{{this.burger_name}}
					<form action="index/update/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="0">
					</form>
					</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>



